fork(selector, attr, consequent, alternative)
  {attr} alternative
  {selector}
    {attr} consequent

vmargin(size)
  margin size 0

bg-style-txt()
  background arguments // background必须在前面
  -webkit-background-clip text
  background-clip text
  color transparent

flex-center()
  display flex
  align-items center if cross-axis in arguments
  justify-content center if main-axis in arguments
  flex-direction column if column in arguments

map-comma(list, f)
  res = f(list[0])
  res = res, f(el) for el in slice(list, 1)
  res

font-face-of(name, fonts, block = {})
  @font-face
    font-family name
    src map-comma(fonts, @(font){'local(%s)' % font})
    {block}

bg-icon(size)
  background-position 50%
  background-size size
  background-repeat no-repeat

